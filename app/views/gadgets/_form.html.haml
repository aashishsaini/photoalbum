= form_for @gadget do |f|
  - if @gadget.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gadget.errors.count, "error")} prohibited this gadget from being saved:"
      %ul
        - @gadget.errors.full_messages.each do |msg|
          %li= msg

  %div.margin-left.field
    = f.label :name
    = f.text_field :name
    -#= f.text_field :user
  %div.margin-left.actions
    = f.submit 'Save'
